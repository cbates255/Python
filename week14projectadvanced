#Script to stop specified running EC2 instances.
import boto3

ec2=boto3.client("ec2")

servers = ec2.describe_instances(
    Filters=[
        {
            'Name': 'tag:Environment',
            'Values': [
                'Dev',
            ]
        },
    ],
)

for server in servers:
    ec2.stop_instances(
    InstanceIds=[
        server,
    ],
)
